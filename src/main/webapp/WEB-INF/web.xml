<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Conference</display-name>

    <resource-ref>
        <res-ref-name>jdbc/conferences</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>charsetFilter</filter-name>
        <filter-class>com.example.conference.filter.CharsetFilterr</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF8</param-value>
        </init-param>
        <init-param>
            <param-name>responseEncoding</param-name>
            <param-value>cp1251</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>charsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.example.conference.listener.AppContextAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.example.conference.listener.SessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.example.conference.listener.ServletRequestListener</listener-class>
    </listener>

</web-app>