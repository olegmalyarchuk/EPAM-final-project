<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Conference</display-name>

    <servlet>
        <servlet-name>controllerServlet</servlet-name>
        <servlet-class>com.example.conference.controller.ControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>controllerServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <res-ref-name>jdbc/conferences</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>charsetFilter</filter-name>
        <filter-class>com.example.conference.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF8</param-value>
        </init-param>
        <init-param>
            <param-name>responseEncoding</param-name>
            <param-value>cp1251</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>charsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.example.conference.listener.AppContextAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.example.conference.listener.SessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.example.conference.listener.ServletRequestListener</listener-class>
    </listener>

    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/pages/errors/400.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/pages/errors/401.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/pages/errors/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/errors/404.jsp</location>
    </error-page>
    <error-page>
        <location>/WEB-INF/pages/errors/500.jsp</location>
    </error-page>

</web-app>